# inventory file can be used with adhoc comands and playbooks.
# here its just for adhoc
# btw this is the "ini" inventory format
# it can also be done in yml

# application servers
[app]
192.168.60.4
192.168.60.5

# database server
[db]
192.168.60.6

# this tells anisble that this group is a group of groups
# Group has all the servers
[multi:children]
app
db

# variables for all the servers
[multivars]
# this variable tells ansible what user to user
# TODO this might need to be ansible_user now instead of ansible_ssh_user
ansible_ssh_user=vagrant
ansible_ssh_private_key_file =/.vagrant.d/insecure_private_key


